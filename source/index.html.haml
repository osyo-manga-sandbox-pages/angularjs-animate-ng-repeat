:scss
  .animate-repeat {
    line-height:40px;
    list-style:none;
    box-sizing:border-box;
  }
   
  .animate-repeat.ng-move,
  .animate-repeat.ng-enter,
  .animate-repeat.ng-leave {
    -webkit-transition:all linear 0.8s;
    transition:all linear 0.8s;
  }
   
  .animate-repeat.ng-leave.ng-leave-active,
  .animate-repeat.ng-move,
  .animate-repeat.ng-enter {
    opacity:0;
    max-height:0;
  }
   
  .animate-repeat.ng-leave,
  .animate-repeat.ng-move.ng-move-active,
  .animate-repeat.ng-enter.ng-enter-active {
    opacity:1;
    max-height:40px;
  }




  .animate-repeat-move {
    line-height:40px;
    list-style:none;
    box-sizing:border-box;
  }
   
  .animate-repeat-move.ng-move,
  .animate-repeat-move.ng-enter,
  .animate-repeat-move.ng-leave {
    -webkit-transition:all linear 0.8s;
    transition:all linear 0.8s;
    position: relative;
  }

  .animate-repeat-move.ng-enter {
    opacity: 0;
    top: 60;
    max-height:0;
  }
  .animate-repeat-move.ng-enter.ng-enter-active {
    opacity: 1;
    top: 0;
    max-height:40px;
  }
  .animate-repeat-move.ng-leave {
    opacity: 1;
    top: 0;
    max-height:40px;
  }
  .animate-repeat-move.ng-leave.ng-leave-active {
    opacity: 0;
    top: -60;
    max-height:0;
  }



  .animate-repeat-scaleY {
    line-height:40px;
    list-style:none;
    box-sizing:border-box;
  }
   
  .animate-repeat-scaleY.ng-scaleY,
  .animate-repeat-scaleY.ng-enter,
  .animate-repeat-scaleY.ng-leave {
    -webkit-transition:all linear 0.8s;
    transition:all linear 0.8s;
    position: relative;
  }

  .animate-repeat-scaleY.ng-enter {
    -webkit-transform: scaleY(0);
    max-height:0;
  }
  .animate-repeat-scaleY.ng-enter.ng-enter-active {
    -webkit-transform: scaleY(1);
    max-height:40px;
  }
  .animate-repeat-scaleY.ng-leave {
    -webkit-transform: scaleY(1);
    max-height:40px;
  }
  .animate-repeat-scaleY.ng-leave.ng-leave-active {
    -webkit-transform: scaleY(0);
    max-height:0;
  }


